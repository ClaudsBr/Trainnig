package br.com.gft.main;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;
import java.util.List;

import br.com.gft.model.Pessoa;

public class Main {

	public static void main(String[] args) {
		
		Pessoa joao = new Pessoa("Joao", 15);
		Pessoa leandro = new Pessoa("Leandro", 21);
		Pessoa paulo = new Pessoa("Paulo", 17);
		Pessoa jessica = new Pessoa("Jessica", 18);

		List<Pessoa> lista = new ArrayList<>();
		lista.add(joao);
		lista.add(leandro);
		lista.add(paulo);
		lista.add(jessica);
		
		System.out.println(lista.toString());
		int maiorIdade =0;
		String pessoaMaisVelha = "";
		for(int i = 0; i< lista.size(); i++)
	    {  
	    	Pessoa pessoa = (Pessoa) lista.get(i);
	    	
	            if(pessoa.getIdade() > maiorIdade)
	            {           
	            maiorIdade = pessoa.getIdade();  
	            }  
	     } 
		for(int i=0; i<lista.size();i++) {
			Pessoa pessoa = (Pessoa) lista.get(i);
			
			if(pessoa.getIdade()== maiorIdade) {
				pessoaMaisVelha = pessoa.getNome();
			}
		}
		System.out.println("A pessoa mais velha da lista é: "+pessoaMaisVelha);
		
	}
	
	

}
